<!DOCTYPE html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <title>Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="stylesheet" href="/assets/stylesheets/profile.css">
</head>

<body>
    <nav class="navbar">

        <div class="search-bar">
            <form action="/<%= id %>/search" method="POST">
            <input type="text" name="user[bitsid]" id="search" placeholder="Search">
            </form>
        </div>

    <div class="links">
        <ul class="nav-links">
            <li><a href="/profile/<%= id %>/edit">Edit Profile</a></li>
            <li><a href="/<%= id %>/nominate">Nominate a Friend</a></li>
            <li><a href="/<%= id %>/notifications">Notifications</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
    </div>

    <div class="hamburger">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>

    </nav>

    <section class="landing">

        <div class="card">
            <div class="profile-photo">
                <div class="container" id="glitch">
                <img src="<%= user.imageUrl %>" class="main">
            </div>
            </div>
            <div class="profile">
                <p class="name"><b>Name: </b><%= user.name %></p>
                <p class="id"><b>Email: </b><%= user.email %></p>
                <% if(user.bitsId) { %> 
                    <p class="id"><b>BITS ID:</b> <%= user.bitsId %></p>
                <% } %>
                <% if(user.discipline) { %>
                <p class="dept"><b>Discipline: </b><%= user.discipline %> </p>
                <% } %>
                <% if(user.quote) { %>
                <p class="caption"><b>Yearbook Quote: </b><%= user.quote %></p>
                <% } %>
            </div>
            </div>
            </section>
            <section class="quotes-page">
                <h1>What others are saying!</h1>
                <% let captions = user.captions %>
                <% for(let i=0; i<captions.length; i++) { %>
                <div">
                    <h2>"<%= captions[i].caption %>"</h2><h3>-<%= captions[i].name %></h3>
                </div>
                <% } %>
            </section>
            <script src="assets/scipts/app.js"></script>
        </body>
        </html>